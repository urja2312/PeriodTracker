<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:padding="28dp">

    <!-- Page Title -->
    <TextView
        android:id="@+id/tv_calendar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Cycle Calendar ðŸŒ¸"
        android:textSize="26sp"
        android:textColor="@color/magenta"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"
        android:shadowColor="#40E91E63"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:layout_marginBottom="14dp" />

    <!-- Calendar Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="22dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Inner Title -->
            <TextView
                android:id="@+id/tv_inner_calendar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Calendar"
                android:textColor="@color/magenta"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mcv_selectionColor="@color/magenta"
                app:mcv_showOtherDates="all"
                app:mcv_weekDayTextAppearance="@android:style/TextAppearance.Small"
                app:mcv_dateTextAppearance="@android:style/TextAppearance.Medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Legend Header -->
    <TextView
        android:id="@+id/tv_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Legend"
        android:textColor="@color/text_primary"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="8dp"
        android:textSize="18sp" />

    <!-- Legend Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_background"
        android:padding="14dp">

        <!-- Period Days -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/avatar_circle"
                android:backgroundTint="#E91E63" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Period Days"
                android:textColor="@color/text_primary"
                android:layout_marginStart="8dp"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Fertile Window -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/avatar_circle"
                android:backgroundTint="#FFB6C1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fertile Window"
                android:textColor="@color/text_primary"
                android:layout_marginStart="8dp"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Ovulation Day -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/avatar_circle"
                android:backgroundTint="#B5EAD7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ovulation Day"
                android:textColor="@color/text_primary"
                android:layout_marginStart="8dp"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>